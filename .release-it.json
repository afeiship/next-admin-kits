{
  "git": {
    "requireCleanWorkingDir": false
  },
  "hooks": {
    "after:init": ["t2k"],
    "after:bump": ["npm run build"],
    "after:release": ["npm pkg get name | cnpm sync"]
  },
  "github": {
    "release": true,
    "releaseBody": "Release of version ${version}",
    "proxy": "http://127.0.0.1:9090"
  }
}
